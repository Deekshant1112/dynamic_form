<!doctype html><html><head><meta charset='utf-8'><title><%= form.title %></title><link rel='stylesheet' href='/css/theme.css'></head><body class='bg-gradient'><div class='form-card glass'><h1><%= form.title %></h1><p class='muted'><%= form.description %></p><% if (success) { %><div class='alert success'>Thank you â€” your response has been submitted.</div><% } %><form method='post' action='/forms/<%= form._id %>/submit' class='form-render'><% form.fields.sort((a,b)=>a.order-b.order).forEach(function(f){ %><div class='field-row'><label><%= f.label %> <% if (f.required) { %><span class='required'>*</span><% } %></label><% var val = values && values[f.name] ? values[f.name] : '' %><% if (f.type === 'text' || f.type === 'email' || f.type === 'date') { %><input type='<%= f.type === 'text' ? 'text' : (f.type === 'email' ? 'email' : (f.type==='date'?'date':'text')) %>' name='<%= f.name %>' value='<%= val %>'><% } else if (f.type === 'textarea') { %><textarea name='<%= f.name %>'><%= val %></textarea><% } else if (f.type === 'number') { %><input type='number' name='<%= f.name %>' value='<%= val %>'><% } else if (f.type === 'checkbox') { %><input type='checkbox' name='<%= f.name %>' value='true' <%= val ? 'checked' : '' %>><% } else if (f.type === 'select') { %><select name='<%= f.name %>'><option value=''>-- choose --</option><% (f.options||[]).forEach(function(o){ %><option value='<%= o.value %>' <%= String(val)===String(o.value)?'selected':'' %>><%= o.label %></option><% }) %></select><% } else if (f.type === 'radio') { %><% (f.options||[]).forEach(function(o){ %><label class='inline-radio'><input type='radio' name='<%= f.name %>' value='<%= o.value %>' <%= String(val)===String(o.value)?'checked':'' %>><%= o.label %></label><% }) %><% } %><% if (errors && errors[f.name]) { %><div class='field-error'><%= errors[f.name] %></div><% } %></div><% }) %><button type='submit' class='btn primary'>Submit</button></form><p><a href='/' class='muted'>Back to forms</a></p></div></body></html>