<!doctype html><html><head><meta charset='utf-8'><title>Fields - <%= form.title %></title><link rel='stylesheet' href='/css/theme.css'></head><body class='bg-gradient'><div class='form-editor-container glass'><header><h1>Manage Fields - <%= form.title %></h1><a href='/admin' class='btn back'>← Dashboard</a></header><section><h3>Existing Fields</h3><% if ((!form.fields || form.fields.length===0)) { %><p class='muted'>No fields yet.</p><% } %><ul class='fields-list'><% form.fields.forEach(function(f,i){ %><li><div class='left'><strong><%= f.label %></strong> <span class='muted'>(<%= f.type %>)</span></div><div class='right'><form method='post' action='/admin/forms/<%= form._id %>/fields/<%= i %>/move' style='display:inline'><input type='hidden' name='direction' value='up'><button class='btn tiny'>↑</button></form><form method='post' action='/admin/forms/<%= form._id %>/fields/<%= i %>/move' style='display:inline'><input type='hidden' name='direction' value='down'><button class='btn tiny'>↓</button></form><form method='post' action='/admin/forms/<%= form._id %>/fields/<%= i %>/delete' style='display:inline' onsubmit='return confirm("Delete this field?")'><button class='btn tiny danger'>Delete</button></form></div></li><% }) %></ul></section><section style='margin-top:18px'><h3>Add new field</h3><form method='post' action='/admin/forms/<%= form._id %>/fields/add' class='stack small-form'><label>Label<input type='text' name='label' required></label><label>Name<input type='text' name='name' required placeholder='unique field name'></label><label>Type<select name='type'><option value='text'>Text</option><option value='textarea'>Textarea</option><option value='number'>Number</option><option value='email'>Email</option><option value='date'>Date</option><option value='checkbox'>Checkbox</option><option value='radio'>Radio</option><option value='select'>Select</option></select></label><label><input type='checkbox' name='required'> Required</label><label>Order<input type='number' name='order' value='<%= (form.fields||[]).length+1 %>'></label><label>Options (JSON for select/radio)<textarea name='optionsJson' rows='4' placeholder='[{"value":"a","label":"Option A"}]'></textarea></label><button class='btn primary' type='submit'>Add Field</button></form></section></div></body></html>